{
    "name": "heycart/production",
    "license": "MIT",
    "type": "project",
    "require": {
        "composer-runtime-api": "^2.0",
        "heycart/administration": "*",
        "heycart/core": "6.7.2.*",
        "heycart/deployment-helper": "^0.0.25",
        "heycart/docker": "^0.3.0",
        "heycart/elasticsearch": "*",
        "heycart/storefront": "*",
        "symfony/flex": "~2",
        "symfony/redis-messenger": "^7.1"
    },
    "repositories": [
        {
            "type": "path",
            "url": "custom/plugins/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/plugins/*/packages/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/static-plugins/*",
            "options": {
                "symlink": true
            }
        }
    ],
	
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "assets:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "endpoint": ["https://raw.githubusercontent.com/heycart/recipes/flex/main/index.json", "flex://defaults"],
            "docker": false
        }
    }
}
